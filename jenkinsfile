pipeline {
    agent any 
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Teja-Aws/Sample.git'
            }
        }
        stage('Changing User/Group and Permission') {
            steps {
              
                sh 'chmod -R 777 /var/lib/jenkins/workspace/App'
                sh 'chown -R jenkins:jenkins /var/www/html/'
            }
        }
        stage('Move code to the respective deployment location') {
            steps {
                sh 'cp -R * /var/www/html/'
            }
        }
    }
   
}
